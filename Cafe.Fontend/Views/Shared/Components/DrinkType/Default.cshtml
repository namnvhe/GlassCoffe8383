@using Cafe.BusinessObjects.Models.Response
@model IEnumerable<DrinkTypeResponse>

<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    @foreach (var drinkType in Model)
                    {
                        <div class="single-logo-item text-center">
                            <a href="#" title="@drinkType.TypeName">
                                <img src="@drinkType.ImagePath"
                                     alt="@drinkType.TypeName"
                                     class="img-fluid border"
                                     style="width: 180px; height: 125px; object-fit: cover;" />
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
